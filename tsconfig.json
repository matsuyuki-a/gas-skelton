{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "target": "es5",
    "module": "umd",
    "moduleResolution": "node",
    "lib": [
        "es2017",
        "es2016",
        "es2015",
        "es5"
    ],
    "declaration": false,
    "removeComments": false,
    "experimentalDecorators": true,
    "noLib": false,
    "strict": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}